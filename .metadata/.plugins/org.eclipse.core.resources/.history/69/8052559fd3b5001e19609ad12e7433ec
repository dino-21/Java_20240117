package ex03;

public class Exam01 {

	public static void main(String[] args) {
		
		int exam  = 4000;         
		
		int hour = 4000/3600;
		int minute = (4000 % 3600)/60;
		int second = (4000 % 3600)%60;
		
		System.out.println(hour + "시간 " + minute+"분 " + second+"초"  );
		
		//출력
		// 1시간 4분 0초

	}

}
